<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.pkmmte.view.CircularImageView
            android:id="@+id/iv_user_profile"
            android:layout_margin="@dimen/padding_listitem"
            android:layout_width="@dimen/comment_profile_image_size"
            android:layout_height="@dimen/comment_profile_image_size" />
        <LinearLayout
            android:layout_marginTop="@dimen/padding_listitem"
            android:layout_marginRight="@dimen/padding_listitem"
            android:layout_marginBottom="@dimen/padding_listitem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/text_title"
                    android:textStyle="bold"
                    android:text="username"/>
                <TextView
                    android:id="@+id/tv_commented_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_subtitle"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_marginLeft="@dimen/padding_listitem"
                    android:text="시간"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_comment_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_comment"
                android:text="긴 텍스트 긴 텍스트 긴 텍스트 긴 텍스트 긴 텍스트 긴 텍스트 긴 텍스트 긴 텍스트 긴 텍스트 긴 텍스트 긴 텍스트 긴 텍스트 긴 텍스트 긴 텍스트 긴 텍스트 긴 텍스트 긴 텍스트 "
                />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:background="@color/lightgray"
        android:layout_marginRight="@dimen/comment_dialog_divider_margin"
        android:layout_marginLeft="@dimen/comment_dialog_divider_margin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/drawer_divider_width" />
</LinearLayout>