<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/tutorial5" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/login_btnset_top_margin"
        android:gravity="center"
        android:orientation="vertical">
        <Button
            android:id="@+id/btn_facebook_login"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_login_button"
            android:background="@color/btn_facebook_login"
            android:textColor="@android:color/white"
            android:text="@string/btn_facebook_login" />
        <Button
            android:id="@+id/btn_skip_login"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_login_button"
            android:layout_marginRight="@dimen/margin_login_button"
            android:background="@color/background_skip_button"
            android:textColor="@android:color/white"
            android:text="@string/btn_skip_login" />

    </LinearLayout>
</RelativeLayout>